SLAB.Service.Desc = "CP210x USB Composite Device driver (WDM)"

CustomerDataPath = "CP210x USB to UART Bridge Controller"
DriverSet = "CP210x USB to UART Bridge Controller Software"


;END ENG - US English Strings

